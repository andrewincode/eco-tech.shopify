<!DOCTYPE html>
<html>
  <head>
    <title>
      {{ page_title -}}
      {%- if current_tags %} &ndash; tagged "{{ current_tags | join: ', ' }}"{% endif -%} {%- if current_page != 1 %} &ndash; Page {{ current_page }}{% endif -%}
      {%- unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless -%}
    </title>
    {% if page_description %}
    <meta name="description" content="{{ page_description | escape }}" /> {% endif %}
    {{ 'css/pace-theme-flash.css' | asset_url | stylesheet_tag }}
    {{ 'css/bootstrap.min.css' | asset_url | stylesheet_tag }}
    {{ 'css/font-awesome.css' | asset_url | stylesheet_tag }}
    {{ 'css/jquery.scrollbar.css' | asset_url | stylesheet_tag }}
    {{ 'css/select2.min.css' | asset_url | stylesheet_tag }}
    {{ 'css/pages.css' | asset_url | stylesheet_tag }}
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">
    {{ 'css/style.css' | asset_url | stylesheet_tag }}
    {{ 'css/ecotech.css' | asset_url | stylesheet_tag }}
    {{ 'css/colours.css' | asset_url | stylesheet_tag }}
    {{ content_for_header }}
  </head>
  <body>
    {{ content_for_layout }}
  </body>
</html>